#include <stdio.h>
int main()
{
   int n,count=0,sum=0;

   scanf("%d",&n);
   if(n==0)
   {
        return 0;
   }
   else
   {
          while(n)
          {
                 sum+=(n%10);
                 n=n/10;
                 count++;
        }
    }
   
           printf("%d %d ",count,sum);
   
    return 0;
}


